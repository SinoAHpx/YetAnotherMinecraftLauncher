<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YetAnotherMinecraftLauncher.Views.Controls.Dialogs.DownloadingDialog">
  <Grid RowDefinitions="1*,8*, 1*" Margin="10">
      <TextBlock FontSize="26"
                 FontWeight="Bold"
                 Text="Downloading"/>
      <ListBox Grid.Row="1" ItemsSource="{Binding DownloadingItems}">
          <ListBox.ItemTemplate>
			  <DataTemplate>
                  <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                      <TextBlock Text="{Binding DownloadingTitle}"/>
                      <ProgressBar Maximum="100" Value="10"/>
                  </StackPanel>
              </DataTemplate>
          </ListBox.ItemTemplate>
      </ListBox>
  </Grid>
</UserControl>
